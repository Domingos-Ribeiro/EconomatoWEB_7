@model EconomatoWEB.Models.Entidade

@{
    ViewBag.Title = "Create";
}
<h2>Operações na Base de Dados</h2>
<br />
<h4>INFO</h4>
<h5>Este foi o caminho que seguiu para chegar a esta página: <b>Operações Regulares - Fornecedores - Criar um Novo Fornecedor</b></h5>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <br />
    <br />
    <br />
    
    <div class="form-horizontal">
        <h4><b>Inserir</b> um <b>Novo Fornecedor</b> na Base de Dados</h4>
        <hr />
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Designacao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Designacao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Designacao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar na Base de Dados" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
